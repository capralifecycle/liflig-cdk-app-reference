{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "moduleDetection": "force",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,

    "verbatimModuleSyntax": false,

    "module": "preserve",
    "noEmit": true,

    "lib": ["es2022"]
  },
  "exclude": ["cdk.out"]
}
